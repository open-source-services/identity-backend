# Server Configuration
PORT=8080
ENVIRONMENT=development
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRY=1h
REFRESH_TOKEN_EXPIRY=168h

# Database Configuration
DATABASE_URL=postgres://username:password@localhost:5432/identity_service?sslmode=disable

# OAuth Configuration - Google
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URL=http://localhost:8080/api/v1/auth/oauth/google/callback

# OAuth Configuration - GitHub
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_REDIRECT_URL=http://localhost:8080/api/v1/auth/oauth/github/callback

# OAuth Configuration - Microsoft
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_REDIRECT_URL=http://localhost:8080/api/v1/auth/oauth/microsoft/callback

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Cross-Domain Configuration (for production)
# Set COOKIE_DOMAIN to .mycompany.com to share cookies across subdomains
COOKIE_DOMAIN=
# Set ALLOWED_ORIGINS to your production domains
ALLOWED_ORIGINS=https://mycompany.com,https://app.mycompany.com,https://admin.mycompany.com

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60